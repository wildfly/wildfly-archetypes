<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0"
                      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                      xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0
                      https://maven.apache.org/xsd/archetype-descriptor-1.1.0.xsd"
                      name="wildfly-extension-archetype">

    <requiredProperties>
        <requiredProperty key="groupId">
            <defaultValue>com.acme</defaultValue>
        </requiredProperty>
        <requiredProperty key="artifactId">
            <defaultValue>tracker</defaultValue>
        </requiredProperty>
        <requiredProperty key="version">
            <defaultValue>1.0-SNAPSHOT</defaultValue>
        </requiredProperty>
        <requiredProperty key="package">
            <defaultValue>${groupId}.${artifactId}</defaultValue>
        </requiredProperty>
    </requiredProperties>

    <fileSets>
        <!-- Root POM -->
        <fileSet filtered="true" packaged="false">
            <directory></directory>
            <includes>
                <include>pom.xml</include>
                <include>README.md</include>
            </includes>
        </fileSet>

        <!-- Extension module -->
        <fileSet filtered="true" packaged="false">
            <directory>__artifactId__-extension</directory>
            <includes>
                <include>pom.xml</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true">
            <directory>__artifactId__-extension/src/main/java</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="false">
            <directory>__artifactId__-extension/src/main/resources</directory>
            <includes>
                <include>**/*.xml</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true">
            <directory>__artifactId__-extension/src/main/resources</directory>
            <includes>
                <include>LocalDescriptions.properties</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="false">
            <directory>__artifactId__-extension/src/main/resources/META-INF/services</directory>
            <includes>
                <include>org.jboss.as.controller.Extension</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="false">
            <directory>__artifactId__-extension/src/main/resources/schema</directory>
            <includes>
                <include>*.xsd</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true">
            <directory>__artifactId__-extension/src/test/java</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
        </fileSet>

        <!-- Feature pack module -->
        <fileSet filtered="true" packaged="false">
            <directory>__artifactId__-feature-pack</directory>
            <includes>
                <include>pom.xml</include>
                <include>wildfly-feature-pack-build.xml</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="false">
            <directory>__artifactId__-feature-pack/src/main/resources/feature_groups</directory>
            <includes>
                <include>**/*.xml</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="false">
            <directory>__artifactId__-feature-pack/src/main/resources/layers</directory>
            <includes>
                <include>**/*.xml</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true">
            <directory>__artifactId__-feature-pack/src/main/resources/modules/system/layers/base/</directory>
            <includes>
                <include>**/*.xml</include>
            </includes>
        </fileSet>

        <!-- Test suite module -->
        <fileSet filtered="true" packaged="false">
            <directory>__artifactId__-testsuite</directory>
            <includes>
                <include>pom.xml</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true">
            <directory>__artifactId__-testsuite/src/test/java</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="false">
            <directory>__artifactId__-testsuite/src/test/resources</directory>
            <includes>
                <include>**/*.xml</include>
            </includes>
        </fileSet>
    </fileSets>
</archetype-descriptor>
